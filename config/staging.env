# Staging Environment Configuration
NODE_ENV=staging
PORT=12000

# Application URLs
CLIENT_URL=https://staging.your-domain.com
API_URL=https://api-staging.your-domain.com

# Database Configuration
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/livechatroom-staging?retryWrites=true&w=majority
DB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true}

# Security
JWT_SECRET=staging-jwt-secret-key
JWT_EXPIRE=7d
BCRYPT_ROUNDS=10

# Agora Configuration
AGORA_APP_ID=your-staging-agora-app-id
AGORA_APP_CERTIFICATE=your-staging-agora-certificate

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-staging-cloud-name
CLOUDINARY_API_KEY=your-staging-api-key
CLOUDINARY_API_SECRET=your-staging-api-secret

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
CORS_ORIGIN=https://staging.your-domain.com

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/staging.log

# Session Configuration
SESSION_SECRET=staging-session-secret
SESSION_MAX_AGE=86400000