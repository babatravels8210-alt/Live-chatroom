# Production Environment Configuration

# Server
PORT=10000
NODE_ENV=production

# Database - MongoDB Atlas
MONGODB_URI=mongodb+srv://datechatpro:YourSecurePassword@datechatpro-cluster.mongodb.net/datechatpro?retryWrites=true&w=majority

# Redis - Redis Cloud
REDIS_URL=redis://default:YourRedisPassword@redis-12345.c1.ap-south-1-1.ec2.cloud.redislabs.com:12345

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-for-production
JWT_EXPIRE=7d

# Cloudinary - Production
CLOUDINARY_CLOUD_NAME=datechatpro
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# OAuth - Production
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
FACEBOOK_APP_ID=your-production-facebook-app-id
FACEBOOK_APP_SECRET=your-production-facebook-app-secret

# Payment - Razorpay Production
RAZORPAY_KEY_ID=rzp_live_your-production-key-id
RAZORPAY_KEY_SECRET=your-production-razorpay-secret

# Email - Production
EMAIL_USER=noreply@datechatpro.com
EMAIL_PASS=your-production-email-password
EMAIL_FROM=Date Chat Pro <noreply@datechatpro.com>

# App Configuration
APP_NAME=Date Chat Pro
APP_URL=https://datechatpro.com
ALLOWED_ORIGINS=https://datechatpro.com,https://www.datechatpro.com

# Security
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
MAX_FILE_SIZE=10485760